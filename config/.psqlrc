-- .psqlrc
-- https://www.postgresql.org/docs/current/app-psql.html

-- Don't display the message at startup
\set QUIET 1

\pset null '[null]'

--\set PROMPT1 '%M:%[%033[1;31m%]%>%[%033[0m%] %n@%/%R%#%x '
--\set PROMPT2 '%M %n@%/%R %# '
\set PROMPT1 '%[%033[1m%]%M %n@%/%R%[%033[0m%]%# '
\set PROMPT2 '[more] %R > '

\set HISTSIZE 2000
\set HISTFILE ~/.psql_history- :DBNAME
\set HISTCONTROL ignoredups

\set COMP_KEYWORD_CASE upper

-- verbosity of error reports (default, verbose, terse)
\set VERBOSITY verbose

-- Show how long each query takes to execute
\timing

-- Use best available output format (esp. when querying large tables)
\x auto

\unset QUIET

\echo 'Welcome to PostgreSQL!'
\echo 'Type :version to see the PostgreSQL version.' 
\echo 'Type :extensions to see the available extensions.'
\echo 'Type \\q to exit.'
\set version 'SELECT version();'
\set extensions 'select * from pg_available_extensions;'

