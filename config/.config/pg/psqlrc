-- .psqlrc
-- https://www.postgresql.org/docs/current/app-psql.html

\set COMP_KEYWORD_CASE upper
\set HISTCONTROL ignoredups
\set HISTFILE ~/.psql_history- :DBNAME
\set HISTSIZE 2000
\set PROMPT1 '%[%033[1;34m%]%M %n@%/%R%[%033[0m%]%# '
\set PROMPT2 '[more] %R > '
\set QUIET 1
\set VERBOSITY verbose

\pset null '[null]'
\timing
\x auto

